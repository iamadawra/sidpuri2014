<%- model_class = Platform -%>
<table class="table table-striped">
  </tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td style="width:60%">
          <h3><%= platform.name %></h3>
            <span style="display:inline;"><h5>Description </h5><%= platform.description %></span>
        </td>
        <td style="width:10%;">
          <div style="padding-top:30px;">
          <h4><%= pluralize platform.reputation_for(:votes).to_i, "vote" %></h4>
        </div>
      </td>
        <td>
          <div style="padding-top:20px;" class="pull-right">
          <span>
          <%= link_to "FOR", vote_platform_path(platform, type: "up", sort: @sortedBy), method: "post", class: "btn btn-success",  :remote => true%>
        </span>
        <span style="width:50px;"></span>
        <span>
          <%= link_to "AGAINST", vote_platform_path(platform, type: "down", sort: @sortedBy), method: "post", class: "btn btn-primary", :remote => true %>
        </span>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<center>
  <%= paginate @platforms %>
</center>
</div>
